{
  "name": "cloud-engineer-agent",
  "description": "클라우드 엔지니어 역할 - AWS 인프라 구축 및 관리",
  "mcpServers": {
    "notion": {
      "command": "npx", 
      "args": ["-y", "@notionhq/notion-mcp-server"],
      "env": {
        "OPENAPI_MCP_HEADERS": "{\"Authorization\":\"Bearer {NOTION_API_TOKEN}\",\"Notion-Version\":\"2022-06-28\"}"
      },
      "timeout": 6000
    }
  },
  "tools": ["@notion"],
  "allowedTools": [
    "@notion/API-retrieve-a-page",
    "@notion/API-get-block-children"
  ],
  "role": "클라우드 엔지니어", 
  "responsibilities": [
    "AWS 인프라 설계",
    "CI/CD 파이프라인 구축",
    "모니터링 및 로깅 설정",
    "보안 정책 수립"
  ]
}
